# ATS System Environment Configuration Example
# Copy this file to .env and update with your values

# ============================================
# MongoDB Configuration
# ============================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change-this-secure-password
MONGO_DATABASE=ats_production

# ============================================
# JWT Configuration
# ============================================
# Generate a secure random key for production
JWT_SECRET=change-this-to-a-long-random-secure-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ============================================
# File Upload Configuration
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
DEBUG=False

# ============================================
# CORS Configuration
# ============================================
# Update with your server IP or domain
ALLOWED_ORIGINS=http://YOUR_SERVER_IP:3000,http://YOUR_SERVER_IP,http://localhost:3000,http://localhost

# ============================================
# MongoDB Express Configuration
# ============================================
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=change-this-password

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=production
APP_NAME=Infopercept ATS
APP_VERSION=1.0.0

# ============================================
# Security Settings
# ============================================
SESSION_TIMEOUT=480
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30

# ============================================
# Email Configuration (Optional)
# ============================================
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@example.com
# FROM_NAME=Infopercept ATS

# ============================================
# Backup Configuration
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_ENABLED=true

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/ats.log

# ============================================
# Feature Flags
# ============================================
ENABLE_REGISTRATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_NOTIFICATIONS=false

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
